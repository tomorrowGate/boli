		//选择图片用input
		//选择图片，马上预览
		function xmTanUploadImg(obj) {
			var fl = obj.files.length;
			$.each(obj.files, function(i, item) {
				var reader = new FileReader();
				//异步读取文件内容，结果用data:url的字符串形式表示
				reader.readAsDataURL(item);
				//当读取操作成功完成时调用
				reader.onload = function(e) {
					var imgstr = '<span onclick="edit_img()" class="upimg"><img src="' + e.target.result + '" class="file_id"></span>';
					$("#upload_img_list").append(imgstr);
				}
			})
			uplodad_img();
		}

		//新增type="file"
		function addinputFile() {
			var allObj = $(".upimg").length;
			if (allObj <= 8) {
