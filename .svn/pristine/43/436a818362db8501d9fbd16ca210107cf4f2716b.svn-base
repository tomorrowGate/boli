
/* 轮播图 */
.margin{
    border-bottom: 8px solid #f2f2f2;
}
.swiper{
    width: 96vw;
    height: 48vw;
    margin:10px auto;
}
.swiper-top{
    width: 100%;
    height: 100%;
    border-radius: 5px;
}
.swiper-pagination-bullet{
    width: 12px;
    border-radius: 4px;
}
.swiper-pagination-bullet-active{
    background: #6eb92c;
}
.swiper-slide-imgbox{
    width: 100%;
    height: 100%;
    border-radius: 10px;
}
.swiper-slide-imgbox img{
    width: 100%;
    height: 100%;
    border-radius: 5px;
}
.chef-main-recomend1{
    padding: 10px 0;
    background-color: #f2f2f2;
}

/* 全部最新热卖 */
.chef-hotslist-head{
    display: flex;
    border-bottom: 1px solid #ddd;
}
.hotslist-head-item{
    width: 33.3%;
    /* padding: 5px 0; */
    margin: 5px 0;
    font-size: 1.1em;
    text-align: center;
}
.hotslist-head-active{
    position: relative;
    color: #6eb92c;
}
.hotslist-head-active::after{
    position: absolute;
    display: block;
    content:"";
    width: 40%;
    left: 50%;
    bottom: -5px;
    transform: translateX(-50%);
    border:1px solid  #6eb92c;
}
/* 商品展示 */
.chef-form-card{
    display: flex;
    padding: 10px;
    border-bottom: 1px solid #ddd;
}
.chef-form-leftimg{
    width: 120px;
    height: 120px;
    margin-right: 10px;
    border-radius: 4px;
    background: skyblue;
}
.chef-form-leftimg img{
    width: 100%;
    height: 100%;
    border-radius: 4px;
}

.chef-right-content{
    position: relative;
    width: calc(100% - 130px);
}
.chef-forum-light{
    font-size: 0.9em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #a2a2a2;
}
.chef-form-formlist .chef-head1-name{
    font-size: 15px;
}
.forum-foot-name,.forum-foot-level {
    background: #d96b6c;
    color: #fff;
    padding: 0 5px;
    border-radius: 2px;
    font-size: 0.8em;
}
.chef-head4{
    width: 100%;
    font-size: 14px;
    margin-top: 25px;
    color: #a6a6a6;
}
.chef-head4 .price{
    color: #f22d1d;
    font-size: 1.1em;
}
.agoPrice{
    text-decoration: line-through;
}
.graytext{
    color: #333;
}
.swiper-del{
    margin-left: 6px;
    font-size: 0.8em;
    color: #a3a3a3;
    text-decoration:line-through;
}
.sales-volume{
    width: 95%;
    text-align: right;
    font-size: 12px;
}

.swiper-red span{
    vertical-align: middle;
}
.mall-earn{
    font-size: 0.8em;
}
.chef-head4 .price{
    color: #f22d1d;
    font-size: 1.1em;
}
.agoPrice{
    text-decoration: line-through;
}

.kitchStore{
    color: #f00;
    vertical-align: bottom;
}
.kitchStore span{
    vertical-align: bottom;
}
