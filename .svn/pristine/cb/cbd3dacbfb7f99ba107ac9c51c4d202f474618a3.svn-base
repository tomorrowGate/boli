/* 头部搜索 */
.search-head {
    height: 44px;
    width: 100%;
    color: #fff;
    line-height: 44px;
    font-size: 14px;
}
.search-bg {
    background-color: #6eb92c;
    height: 44px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
}
.search-main {
    position: relative;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 10px;
}
.down_icon {
    font-size: 1.1em
}
.icon-search{
    margin-right: 4px
}
.search-virtual {
    width: 60%;
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    background-color: #fff;
    border-radius: 15px;
    font-size: 1.1em;
    color: #999;
}

/* 轮播图 */
.swiper{
    width: 96vw;
    height: 48vw;
    margin:10px auto;
    border-radius: 10px;
}
.swiper-top{
    width: 100%;
    height: 100%;
}
.swiper-pagination-bullet{
    width: 12px;
    border-radius: 4px;
}
.swiper-pagination-bullet-active{
    background: #6eb92c;
}
/* 图片条 */
.displayImg {
    width: 96%;
    height: 90px;
    border-radius: 30px;
    margin:1px 0 15px 2%;
    background: lightblue;
}
/* 宝贝精选头部 */
.chef-main-head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 10px;
    font-size: 14px;
    border-bottom: 1px solid #dfdfdf;
    border-top: 8px solid #f2f2f2;
}
.chef-head-left{
    display: flex;
    align-items: center;
}
.chef-main-head .icon-qianbi{
    color: #6eb92c;
}
.chef-left-text{
    font-weight: bold;
    font-size: 1.2em;
    margin-left: 6px;
    margin-right: 10px;
}
/* 宝贝精选 */
.swiper-rush{
    height: 180px;
    margin-bottom: 15px;
    border-bottom: 8px solid #f2f2f2;
}
.swiper-option{
   width: 114px; 
   border: 1px solid #f2f2f2;
   margin: 10px 0 0 8px;
   height: 150px;
   font-size: 14px;
}
.forum-item-imgbox{
    height: 70%;
}
.swiper-red{
    color: #ff0000;
}
.swiper-del{
    margin-left: 3px;
    font-size: 0.6em;
    color: #a3a3a3;
    text-decoration:line-through;
}
.forum-item-explain{
    padding: 3px 0 0 3px;
}
/* 全部最新热卖 */
.chef-hotslist-head{
    display: flex;
    border-bottom: 1px solid #ddd;
    font-weight: bold;
}
.hotslist-head-item{
    width: 33.3%;
    /* padding: 5px 0; */
    margin: 10px 0;
    font-size: 1em;
    text-align: center;
}
.hotslist-head-active{
    position: relative;
    color: #6eb92c;
}
.hotslist-head-active::after{
    position: absolute;
    display: block;
    content:"";
    width: 30%;
    left: 50%;
    bottom: -10px;
    transform: translateX(-50%);
    border:1px solid  #6eb92c;
}
/* 全部最新热卖列表 */
.bestSellers{
    background: #f2f2f2;
    padding: 10px 6px;
    display: flex;
    justify-content: space-between;
}
.bestSellers-item{
    height: 210px;
    width: 49%;
    font-size: 0.6em;
    background: #fff;
}
.bestSellers-img{
    height:70%;
    border: 1px solid lightcoral;
    box-sizing: border-box;
}
.introduce{
    margin:3px 5px;
}
.bestSellers-red{
    position: relative;
    margin-top: 5px;
}
.bestSellers-del{
    color: #a3a3a3;
    text-decoration:line-through;
}
.salesVolume{
    color: #a3a3a3;
    position: absolute;
    right: 4px;
    top:3px;
}
.bestSellers-text{
 font-size: 16px;
 color: #ff0000;
}