
/* 名厨动态 */
.chef-trends{
    padding: 10px;
}
.chef-trends-head{
    display: flex;
    position: relative;
    align-items: center;
    font-size: 0.9em;
}
.trends-head-imgbox{
    width: 50px;
    height: 50px;
    background: skyblue;
    border-radius: 50%;
    margin-right: 10px;
}
.trends-head-imgbox img{
    width: 100%;
    border-radius: 50%;
}
.trends-light{
    color: #999;
    font-size: 0.8em;
}
.trends-head-right{
    position: absolute;
    right:10px;
    top:50%;
    height: 16px;
    line-height: 17px;
    padding: 0px 8px;
    border:1px solid #6eb92c;
    border-radius: 9px;
    color: #6eb92c;
    transform: translateY(-50%);
}

.hotslist-body-item{
    font-size: 0.8em;
}
.hotslist-item-title{
    padding: 10px 0;
}
.hotslist-item-imgboxs{
    display: flex;
    align-items: center;
}
.hotslist-imgboxs-imgbox{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 33%;
    height: 30vw;
    
}
.hotslist-imgboxs-imgbox+.hotslist-imgboxs-imgbox{
    margin-left: 4px;
}
.hotslist-imgboxs-imgbox img{
    width: 100%;
}
.hotslist-item-footer{
    display: flex;
    justify-content:  flex-end ;
}
.hotslist-footer-item{
    margin-right: 16px;
}

/* footer */
.chef-detail-suspension{
    position: fixed;
    bottom: 54px;
    right: 10px;
    width: 35px;
    height: 35px;
    line-height: 20px;
    padding: 10px;
    border-radius: 50%;
    font-size: 0.9em;
    background: rgba(0,0,0,1);
    color: #fff;
    text-align: center;
    z-index: 3;
}
.chef-detail-asteacher{
    position: fixed;
    bottom:0;
    width: 100%;
    padding: 15px;
    text-align: center;
    background: #fff;
}