html,body{
    height: 100%;
}
/*名厨介绍*/

.introduce {
    height: 90px;
    margin: 11px auto;
    display: flex;
    justify-content: space-around;
    border-bottom: 1px solid #ddd;
}

.history {
    width: 23%;
    height: 90px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.history-ball {
    width: 40px;
    height: 40px;
    line-height: 38px;
    text-align: center;
    border-radius: 50%;
    background: #efdfbd;
}

.history-ball .iconfont{
    color: #b89c6a;
    font-size: 24px;
}

.history-ball-text {
    font-size: 14px;
}

.chef-nocloccet{
    position: fixed;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    top:50%;
    left: 50%;
    transform: translate(-50%,-50%)
}
.chef-nocloccet-imgbox{
    width: 50%;
}
.chef-nocloccet-imgbox img{
    width: 100%;
}
.chef-nocloccet-text{
    color: #999;
}

/* 精品讲堂 */
.myinfo-under-items{
    border-bottom: 10px solid #f2f2f2;
}
.chef-collect-timetotal{
    background: #f2f2f2;
    padding-bottom:20px; 
}
.chef-form-formlist{
    width: 100%;
    height: 110px;
    background: #fff;
    margin-bottom: 10px;
}
.form-formlist-item{
    display: flex;
    width: calc(100% + 80px);
    height: 110px;
}
.chef-form-card{
    display: flex;
    padding: 10px;
    width: 100vw;
    border-bottom: 1px solid #ddd;
    box-sizing: border-box;
}
.chef-form-leftimg{
    width: 120px;
    height: 80px;
    margin-right: 10px;
    border-radius: 4px;
    background: skyblue;
}
.chef-form-leftimg img{
    width: 100%;
    height: 100%;
    border-radius: 4px;
}
.chef-forum-light{
    font-size: 0.9em;
    color: #999;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.chef-form-formlist .chef-head1-name{
    font-size: 1em;
    font-weight: bold;
}
.chef-head4{
    line-height: 24px;
    font-size: 0.9em;
    color: #999;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.my-info-top{
    padding: 6px 10px 4px;
    font-size: 0.8em;
    box-sizing: border-box;
}
.my-info-bottom{
    display: flex;
    justify-content: flex-end;
    padding: 10px ;
    box-sizing: border-box;
}
.my-info-lookmore{
    padding: 2px 8px;
    color: #6eb92c;
    border:1px solid #6eb92c;
    border-radius:4px ;
    font-size: 0.9em;
}
.hide{
    display: none;
}