
/* 头部图片 */
.headImg{
    position: relative;
    width: 100%;
    height: 40vw;
    background: url("../../image/kitchBg.png") no-repeat;
    background-size: cover;
    background-position: center;
}
.headImg-text{
    color: #fff;
    text-align: center;
    padding: 5px;
    box-sizing: border-box;
}
.invitat-app-down{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    text-align: center;
    font-size: 1.4em;
    font-weight: bold;
}
.invitat-vip{
    position: absolute;
    left: 50%;
    bottom: 20px;
    transform: translateX(-50%);
    /* font-size: 1.2em; */
}
/* 邀请得积分 */
.integral{
    background: #fff;
    border-radius: 8px;
    padding: 20px 0 5px 0;
    margin-top: -10px;
    z-index: 2;
    position: absolute;
    width: 100%;
   
}
.getIntegral{
    margin-left: 10px;
    font-weight: bold;
    
}
.integralText{
    font-size: 0.7em;
    color: #a3a3a3;
    margin:2px 0 20px 10px;
}
.integralBtn{
    width: 88%;
    height: 35px;
    background:#6eb92c;
    color: #fff;
    border-radius: 30px;
    margin:5px 0 20px 6%;
    font-size: 15px;
}
.recruitName{
    font-weight: bold;
    margin:0 0 15px 10px;
    font-size: 15px;
}
.recruit{
    width: 94%;
    height:85px ;
    background-image: linear-gradient(to top,#ed7852,#fe9661);
    margin: 0 0 15px 3%;
    border-radius: 15px;
    display: flex;
    justify-content: space-between;
    color: #fff;
    text-align: center;
    line-height:30px ;
    padding: 15px;
    box-sizing: border-box;
}
.recruitText{
    font-size: 0.9em;
}
.integral-under{
    font-size: 0.8em;
    text-align: center;
    color: #6eb92c;
}