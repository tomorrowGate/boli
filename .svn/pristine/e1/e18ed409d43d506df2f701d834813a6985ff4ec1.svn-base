/*头部*/
.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.head-center{
    margin: 0 auto;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}

/* 搜索 */
.search-head{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:11px 10px;
}
.search-main{
    position: relative;
    width: 86%;
    background: #f2f2f2;
    border: 1px solid #f2f2f2;
    border-radius: 15px;
}
.search-virtual{
    margin-left: 20px;
    width: calc( 100% - 32px);
    height: 20px;
    padding: 5px;
}
.icon-search{
    position: absolute;
    left: 5px;
    top:50%;
    transform: translateY(-60%)
}

/* 轮播图 */
.swiper{
    width: 96vw;
    height: 48vw;
    margin:0 auto;
    border-radius: 10px;
}
.swiper-top{
    width: 100%;
    height: 100%;
}
.swiper-pagination-bullet{
    width: 12px;
    border-radius: 4px;
}
.swiper-pagination-bullet-active{
    background: #6eb92c;
}
.swiper-slide-imgbox{
    width: 100%;
    height: 100%;
    background: skyblue;
    border-radius: 10px;
}
.swiper-slide-imgbox img{
    width: 100%;
    height: 100%;
    border-radius: 10px;
}
/*名厨介绍*/
.introduce{
  width: 85%;
  height: 90px;
  margin: 11px auto;
  display: flex;
  justify-content: space-around;
}
.history{
  width: 23%;
  height: 90px;
  display: flex;
  flex-direction:column;
  justify-content: center;
  align-items: center;

}
.history-ball{
  width: 55px;
  height: 55px;
  border-radius: 50%;
  background: #efdfbd;
}
.history-ball-text{
  font-size: 14px;
}
/*佣金讲堂*/
.platform{
  width: 96%;
  height: 72px;
  margin:15px auto;
  background:  #efefef;
  border-radius: 50px;
  }
  /*大师开讲*/
  .chef-forum{
    padding-bottom:30px; 
    border-top: 9px solid #efefef;
  }
  .chef-main-head{
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 10px;
      font-size: 14px;
      border-bottom: 1px solid #dfdfdf;
  }
  .chef-head-left{
      display: flex;
      align-items: center;
  }
  .chef-main-head .icon-qianbi{
      color: #6eb92c;
  }
  .chef-left-text{
      font-weight: bold;
      font-size: 1.2em;
      margin-left: 6px;
  }
  /*.chef-head-more{
      color: #a3a3a3;
  }*/
  /*讲堂轮播列表*/
  .chef-form-body{
      padding: 10px;
      background: linear-gradient(to bottom,#fff, #fafafa);
  }
  .forum-item{
      width: 180px;
      /* height: 150px; */
      padding: 1px 0;
      border-radius: 6px;
      background: #fff;
      box-shadow: 0 0 10px #eee ;
  }
  .chef-forum-slide{
      width: auto;
      margin-right:15px;
  }
  .forum-item-imgbox{
      position: relative;
      width: 180px;
      height: 90px;
      border-radius: 6px;
  }
  .forum-item-tagtop{
      position: absolute;
      top:6px;
      right: 8px;
      padding:1px 8px;
      border-radius: 8px;
      font-size: 0.8em;
  }
  .forum-item-pay{
      background: #6eb92c;
      color: #fff;
      font-size: 0.8em;
  }
  .forum-item-free{
      background: #fff;
      color: #666;
  }
  .forum-item-tagbottom{
      position: absolute;
      bottom: 0;
      right: 0;
      width: 100%;
      text-align: right;
      padding: 0 5px;
      background: linear-gradient(to right,#fff, #6b6b6b);
      color: #fff;
      font-size: 0.8em;
      box-sizing: border-box;
  }
  .forum-item-imgbox img{
      width: 100%;
      height: 100%;
      border-radius: 10px;
  }
  .forum-item-explain{
      padding: 5px 10px;
  }
  .forum-explain-title{
      padding: 4px 0;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
  }
  .forum-explain-foot{
      display: flex;
      align-items: center;
      font-size: 0.8em;
      color: #999;
  }
  .forum-foot-imgbox{
      width: 20px;
      height: 20px;
      border-radius: 50%;
      margin-right: 4px;
      background: skyblue;
  }
  .forum-foot-imgbox img{
      width: 100%;
      height: 100%;
      border-radius: 50%
  }
  .forum-foot-explain{
      display: flex;
  }
  .forum-foot-name{
      margin-right: 5px;
  }
  .forum-foot-level{
      margin-left: 5px;
  }
  .White{
    width: 100%;
    height: 14px;
    border-top: 5px solid #efefef;
    background: #ffffff;
  }

  
/* 精品讲堂 */
.chef-form-card{
    display: flex;
    padding: 10px;
    border-top: 1px solid #ddd;
}
.chef-form-leftimg{
    width: 120px;
    height: 80px;
    margin-right: 10px;
    border-radius: 4px;
    background: skyblue;
}
.chef-form-leftimg img{
    width: 100%;
    height: 100%;
    border-radius: 4px;
}
.chef-forum-light{
    font-size: 0.9em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.chef-form-formlist .chef-head1-name{
    font-size: 1em;
}
.chef-form-formlist .chef-busy-footer{
    border:none;
}