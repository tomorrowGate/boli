/*教学视频列表*/
.no-video-imgbox{
    width: 50vw;
    height: 50vw;
    margin: 50px auto;
}
.no-video-imgbox img{
    width: 100%;
    height: 100%;
}
.no-video-text{
    text-align: center;
    font-size: 0.9em;
}

.detail-teach-videos {
    padding: 10px;
}

.detail-teach-videobox {
    position: relative;
    width: calc( 100vw - 20px);
    height: calc( 50vw - 10px);
    background: skyblue;
    margin-bottom: 10px;
}

.detail-video-name {
    font-weight: bold;
}

.video-video-detail {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.video-video-left {
    display: flex;
    align-items: center;
    font-size: 0.8em;
    color: #999;
}

.video-left-text {
    margin: 10px;
}

.video-video-right {
    display: flex;
    align-items: center;
    font-size: 0.9em;
}

.video-footer-item {
    margin-left: 10px;
}
.video-tag{
    position: absolute;
    top:5px;
    right: 8px;
    height: 16px;
    line-height: 17px;
    font-size: 0.8em;
    background: #6eb92c;
    padding: 1px 6px;
    text-align: center;
    color: #fff;
    border-radius: 8px;
}

/* footer */
.chef-detail-suspension{
    position: fixed;
    bottom: 54px;
    right: 10px;
    width: 35px;
    height: 35px;
    line-height: 17px;
    padding: 10px;
    border-radius: 50%;
    font-size: 0.9em;
    background: rgba(0,0,0,1);
    color: #fff;
    text-align: center;
    z-index: 3;
}
.chef-detail-asteacher{
    position: fixed;
    bottom:0;
    width: 100%;
    padding: 15px;
    text-align: center;
    background: #fff;
}