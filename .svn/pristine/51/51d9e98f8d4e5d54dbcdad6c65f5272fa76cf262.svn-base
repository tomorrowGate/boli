html,body{
    background: #ee7b54;
}
/* 头部图片 */
.headImg{
    position: relative;
    width: 100%;
    height: 40vw;
    background: url("../../image/invitationDown.png") no-repeat;
    background-size: cover;
    background-position: center;
}
.headImg-text{
    color: #fff;
    text-align: center;
    padding: 5px;
    box-sizing: border-box;
}
.invitat-app-down{
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 100%;
    text-align: center;
    font-size: 1.4em;
    font-weight: bold;
}
.invitat-vip{
    /* font-size: 1.2em; */
}
/* 邀请得积分 */
.integral{
    background: #fff;
    border-radius: 8px;
    padding: 20px 0 5px 0;
}
.getIntegral{
    margin-left: 10px;
    font-weight: bold;
    
}
.integralText{
    font-size: 0.7em;
    color: #a3a3a3;
    margin:2px 0 20px 10px;
}
.integralBtn{
    width: 88%;
    height: 35px;
    background:#6eb92c;
    color: #fff;
    border-radius: 30px;
    margin:5px 0 20px 6%;
    font-size: 15px;
}
.recruitName{
    font-weight: bold;
    margin:0 0 15px 10px;
    font-size: 15px;
}
.recruit{
    width: 94%;
    height:85px ;
    background-image: linear-gradient(to top,#ed7852,#fe9661);
    margin: 0 0 15px 3%;
    border-radius: 15px;
    display: flex;
    /* justify-content: space-between; */
    color: #fff;
    text-align: center;
    line-height:30px ;
    padding: 15px;
    box-sizing: border-box;
}
.recruit-item{
    width: 50%;
}
.recruitText{
    font-size: 0.9em;
}
/* 分享以下商品邀请好友更有效 */
.title{
    color: #fff;
   line-height: 55px;
    text-align: center;
    letter-spacing:1px;
    font-size: 1.1em;
}
/* 全部最新热卖列表 */
.bestSellers{
    padding: 10px ;
    display: flex;
    justify-content: space-between;
    flex-wrap:wrap;
}
.bestSellers-item{
    height: calc( 50vw + 74px);
    width: calc( 50vw - 15px);
    font-size: 0.9em;
    background: #fff;
    margin-bottom: 10px;
}
.bestSellers-img{
    height:calc( 50vw - 15px);
    width: calc( 50vw - 15px);;
    box-sizing: border-box;
}
.bestSellers-img img{
    width: 100%;
    height: 100%;
    border-radius: 4px;
}
.bestSellers-item-bottom{
    display: flex;
    flex-direction: column;
    justify-content: space-between;

}
.introduce{
    margin:3px 5px;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.bestSellers-red{
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 5px;
}
.bestSellers-del{
    color: #a3a3a3;
    font-size: 0.8em;
    text-decoration:line-through;
}
.salesVolume{
    color: #a3a3a3;
    font-size: 14px;
}
.bestSellers-text{
 font-size: 16px;
 color: #ff0000;
}
