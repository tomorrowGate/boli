<!DOCTYPE html>
  <html>
  <head>
      <meta charset="utf-8">
      <meta name="viewport" content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0"/>
      <title>客服</title>
      <link rel="stylesheet" type="text/css" href="../font/iconfont.css" />
      <link rel="stylesheet" type="text/css" href="../css/api.css"/>
      <style>
      html,body {
        background-color: #f4f4f4;
      }
      .logo{ width:100%;padding:60px 0 20px 0;text-align: center; }
      .logo img{ height:70px;width:70px;border-radius: 5px; }
      .out_div{ margin-top:10px; }
      .copy{ width:3em;border:1px solid #000;height:20px;line-height:20px;border-radius: 10px; margin-top:10px;}
      </style>
  </head>
  <body>
    <header class="page-head" ref="header">
      <div class="back" onclick="goBack()" tapmode="tapmodeclass">
        <i class="iconfont icon-back"></i>
      </div>
      <div class="head-center">
        <span>客服</span>
      </div>
    </header>

      <div class="logo hide"><img src="../image/ewm.png"><p>官方热线:<span id="wechat_code">400-108-0128</span></p><p><span onclick="copyHref()" tapmode class="copy">复制</span></div></div>
  </body>
  <script type="text/javascript" src="../script/api.js"></script>
  <script type="text/javascript" src="../script/lib/jquery-3.3.1.min.js"></script>
  <script type="text/javascript" src="../script/lib/fastclick.js"></script>
  <script type="text/javascript">
    var userId=window.localStorage.getItem("userId"); //用户id
    $(function() {  //消除300ms点击延迟
      FastClick.attach(document.body);
    });
       //返回上一页
      function goBack(){
          api.closeWin();
      }
      var URL="";
      apiready = function(){

      URL=$api.URL();
      var header = $api.dom('header');
      //适配iOS 7+，Android 4.4+状态栏 
      $api.fixStatusBar(header);
      
        var header = $api.dom('header'); // 获取 header 标签元素
        headerH = $api.fixStatusBar(header)
        if(api.pageParam.sorce=="myinfo"){
          api.openFrame({
            name: 'customBlank',
            url: 'customBlank.html',
            bounces: true,
            rect: {
              marginTop: headerH,
              marginBottom: 0,
              w: 'auto',
            }
          });
        }
      };

        //复制微信号
    function copyHref(){
      var content=$("#wechat_code").text();
      var clipBoard = api.require('clipBoard');
      clipBoard.set({
        value: content
      }, function(ret, err) {
        if (ret) {
         api.toast({
           msg: '复制成功',
           duration: 2000,
           location: 'bottom'
         });
       }else{
         api.toast({
           msg: '复制失败',
           duration: 2000,
           location: 'bottom'
         });
       }
      });
    }

  </script>
  </html>
