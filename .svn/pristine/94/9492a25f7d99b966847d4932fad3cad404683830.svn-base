.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.head-center{
    margin: 0 auto;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}

/* 搜索 */
.search-head{
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding:10px 10px 0 10px;
}
.search-main{
    position: relative;
    width: 84%;
    background: #f2f2f2;
    border: 1px solid #f2f2f2;
    border-radius: 15px;
}
.search-virtual{
    margin-left: 20px;
    width: calc( 100% - 32px);
    height: 20px;
    padding: 5px;
}
.icon-search{
    position: absolute;
    left: 5px;
    top:50%;
    transform: translateY(-60%)
}

/* 轮播图 */
.swiper{
    width: 96vw;
    height: 48vw;
    margin:10px auto;
    border-radius: 10px;
}
.swiper-top{
    width: 100%;
    height: 100%;
}
.swiper-pagination-bullet{
    width: 12px;
    border-radius: 4px;
    opacity: 1;
    background: #fff;
}
.swiper-pagination-bullet-active{
    background: #6eb92c;
}
.swiper-slide-imgbox{
    width: 100%;
    height: 100%;
    background: skyblue;
    border-radius: 8px;
}
.swiper-slide-imgbox img{
    width: 100%;
    height: 100%;
    border-radius: 10px;

}

/* 名厨汇聚 头部*/
.chef-main-head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 10px;
    font-size: 14px;
    background: #fff;
    border-bottom: 1px solid #dfdfdf;
}
.chef-head-left{
    display: flex;
    align-items: center;
}
.chef-main-head .icon-qianbi{
    color: #6eb92c;
}
.chef-left-text{
    font-weight: bold;
    font-size: 1.2em;
    margin-left: 6px;
}
.chef-head-more{
    color: #a3a3a3;
}
/* 名厨汇聚 厨师卡片*/
.chef-main-recomend1{
    padding: 10px 0;
    background-color: #f2f2f2;
}
.chef-cards{
    display: flex;
    flex-wrap: wrap;
    padding: 20px 10px;
    background: #fff;
}
.chef-card-out{
    display: flex;
    flex-wrap: wrap;
    width: 33%;
    margin-bottom: 10px;
}
.chef-card{
    width: 90%;
    margin: auto;
    background: #f6f6f6;
    box-shadow: 0 0 10px #ccc;
}
.chef-card-bg{
    padding: 10px 0;
    background: #fff;
}
.chef-card-imgbox{
    height: 80px;
    width: 80px;
    border-radius: 50%;
    margin: auto;
}
.chef-card-imgbox img{
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background: skyblue;
}
.chef-card-detail{
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 10px 0 ;
}
.chef-detail-name{
    font-weight: bold;
    margin-bottom: 4px;
}
.chef-detail-text{
    color: #999;
    margin-bottom: 4px;
    font-size: 0.8em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.chef-detail-follow{
    height: 16px;
    line-height: 16px;
    padding: 0px 10px;
    border-radius: 8px;
    color: #6eb92c;
    margin-bottom: 4px;
    font-size: 0.9em;
    border:1px solid #6eb92c;
}

/*  厨师列表  */
.chef-busy-out{
    padding: 20px 10px;
}
.chef-busy-card{
    display: flex;
    padding-bottom: 20px ;
}
.chef-leftimg{
    width: 90px;
    height: 180px;
    margin-right: 10px;
    background: skyblue;
}
.chef-leftimg img{
    width: 100%;
    height: 100%;
}
.chef-right-content{
    position: relative;
    width: calc( 100% - 110px );
    color: #999;
}
.chef-head1{
    display: flex;
    justify-content: space-between;
    align-items: center;

}
.chef-head1-name{
    font-size: 1.1em;
    font-weight: bold;
    color: #000;
}
.chef-head1-follow{
    font-size: 0.8em;
}
.chef-light{
    font-size: 0.9em;
    line-height: 32px;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
}
.chef-head4{
    line-height: 24px;
    font-size: 0.9em;
    overflow : hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.chef-foot{
    position: absolute;
    bottom: 0;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #6eb92c;
}
.chef-foot-left{
    font-size: 0.9em;
}
.chef-foot-right{
    display: flex;
}
.chef-right-btn{
    height: 16px;
    line-height: 16px;
    padding: 2px 10px;
    border-radius: 10px;
    margin: 0 4px;
    border: 1px solid #6eb92c;
}
.chef-busy-footer{
    display: flex;
    border-top: 1px solid #ddd;
    padding: 20px 10px;
    justify-content: space-around;
}
.chef-footer-item{
    width: 48%;
    padding: 10px 0;
    font-weight: bold;
    background: #f7f7f7;
    text-align: center;
}

.chef-forum{
    background: #efefef;
    padding: 15px 0;
}
.chef-form-in{
    background: #fff;
}