html,body{
    width: 100%;
    height: 100%;
    background: #ffd545;
}
.wrap1{
    width: 100%;
    height: 100%;
    overflow: scroll;
    background:url("../../image/invitationAdv.png") no-repeat center ;
    background-size: cover;
}
.wrap-bg-imgbox {
    width: 100vw;
    height: auto;
}
.wrap-bg-imgbox img{
    width: 100%;
}
.back{
    position: absolute;
    top:40px;
    left: 10px;
    width: 30px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    font-size: 1.2em;
    color: #fff;
    background: rgba(0,0,0,0.5);
    border-radius: 50%;
}
.integralBtn{
    position: fixed;
    bottom: 20vw;
    left:50%;
    width: 90%;
    height: 50px;
    background: #fd6c59;
    color: #fff;
    border-radius: 25px;
    transform: translateX(-50%);
    font-size: 1.1em;
    letter-spacing: 1px;
}
.look-rule{
    position: fixed;
    bottom: calc(20vw - 30px);
    left:50%;
    transform: translateX(-50%);
    font-size: 0.9em;
    color: #94794c;
}
.look-rule::after{
    display: block;
    content: "";
    width: 90%;
    border-top: 1px solid #94794a;
}