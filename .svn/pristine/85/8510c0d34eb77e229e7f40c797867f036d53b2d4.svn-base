						//page:0
					}
				}
			}, function(ret, err) {
				console.log(JSON.stringify(ret));
				if (ret.done) {
				    var url="";
					var goods_url = URL + "index.php?app=goods&id=";
					var title = ret.retval.goods_name;
					var text = ret.retval.extension_content;
					//var url = goods_url + ret.retval.goods_id;
					var img = URL + ret.retval.default_image;
					//微信
					if (tag == "session") {
						fnopenWechat(tag, title, text, url, img);
					} else if (tag == "timeline") {//微信朋友圈
						fnopenWechat(tag, title, text, url, img);
					} else if (tag == "QFriend") {
						fnopenQq(tag, title, text, url, img);
					}else if (tag == "QZone") {
						fnopenQq(tag, title, text, url, img);
					}else if (tag == "sinaWb") {
						fnopenWeibo(tag, title, text, url, img);
					}

				} else {
					//alert(ret.msg);
				}
			});
		}

		//下载分享
		function fnOpendown(aId) {
			//复制文章文字
			var content = $("#article_" + aId).find(".info_content").find("div").text();
			var clipBoard = api.require('clipBoard');
			clipBoard.set({
				value : content
			}, function(ret, err) {
				if (err) {
					api.toast({
						msg : err.msg,
						duration : 2000,
						location : 'bottom'
					});
				}
			});
			//下载图片
			var pic_url = $("#article_" + aId).find(".image_item");
			$.each(pic_url, function(i, item) {
				var path = $(this).find("img").attr('src');
				var myurl = path;
				console.log(path);
				api.download({
					url : path,
					report : true,
					cache : true,
					allowResume : true,
				}, function(ret, err) {
					if (ret.state == 1) {
						//下载成功
						console.log(ret.savePath);
						myurl = ret.savePath;
					} else {
						console.log("下载失败");
					}
				});
				api.saveMediaToAlbum({
					path : myurl
				}, function(ret, err) {
					if (ret && ret.status) {
						console.log('保存成功');
					} else {
						console.log('保存失败');
					}
				});
			})
			api.openFrame({
				name : 'download.share',
				url : './download.share.html',
				bounces : false,
				bgColor : 'rgba(0,0,0,0.5)',
				animation : {
					type : "movein", //动画类型（详见动画类型常量）
					subType : "from_bottom", //动画子类型（详见动画子类型常量）
					duration : 100 //动画过渡时间，默认300毫秒
				}
			});
		}

