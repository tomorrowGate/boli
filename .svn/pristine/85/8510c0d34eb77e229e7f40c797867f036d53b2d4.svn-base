			qq.installed(function(ret) {
				if (ret.status) {
					api.toast({
						msg : '分享中，请稍候',
						duration : 2000,
						location : "middle"
					});
				} else {
					api.toast({
						msg : '没有安装QQ，无法进行分享',
						duration : 2000,
						location : "middle"
					});
				}
			});
			qq.shareNews({
				url : url,
				title : title,
				description : text,
				imgUrl : img,
				type : tar
			}, function(ret, err) {
				if (ret.status) {
					api.toast({
						msg : '分享成功',
						duration : 2000,
						location : "botoom"
					});
				}
			});
		}

		function fnopenErweima(gID) {
			api.openWin({
				name : 'share.ewm',
				url : './share.ewm.html',
				bounces : false,
				pageParam : {
					goodId : gID
				},
				animation : {
