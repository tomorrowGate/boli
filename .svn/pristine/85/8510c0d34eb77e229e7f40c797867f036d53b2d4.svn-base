		//获取列表信息
		function get_hot_info() {
			var userId = localStorage.getItem("userId");
			api.ajax({
				url : URL + 'index.php?app=appfind',
				method : 'post',
				cache : false,
				timeout : 30,
				dataType : 'json',
				returnAll : false,
				data : {
					values : {
						user_id : userId,
						//page:0
					}
				}
			}, function(ret, err) {
				console.log(JSON.stringify(ret));
				console.log(JSON.stringify(err));
				if (ret.done) {
					$("#div1").html("");
					var data = ret.retval;
					$.each(ret.retval,function(i,item){
						var lbt = '';
						lbt += '<div class="nomal_item clearfix" id="'+item.article_id+'">';
		                lbt += '<div class="article_title">';
		                if(item.portrait){

		                    lbt += '<img src="' + URL + item.portrait + '">';
		                }else{
		                	lbt += '<img src="../image/default_portrait.png">';
		                }
		                lbt += '<span class="font_w1">'+item.real_name+'</span><span class="num font_c1">人数：'+item.count+'人</span></div>';
		                lbt += '<div class="article_content font_c1">'+item.content+'</div>';
		                lbt += '<div class="opera"><span>加入派系</span></div>';
		                lbt += '</div>';
		                $api.append($api.byId("list"), lbt);

					})

				} else if(ret){
                api.toast({
                  msg: ret.msg,
                  duration: 2000,
                  location: 'middle'
                });
            }
            if(err){
              // api.toast({
              //   msg: err.msg,
              //   duration: 2000,
              //   location: 'middle'
              // });
              console.log(err.msg);
            }
				api.refreshHeaderLoadDone();
			});
		}

