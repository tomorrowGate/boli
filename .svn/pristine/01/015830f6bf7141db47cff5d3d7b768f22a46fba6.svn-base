html, body {
    background: #f2f2f2;
}
/*头部*/
.page-head {
    display: flex;
    height: 44px;
    line-height: 44px;
}

.head-center {
    margin: 0 auto;
    font-weight: bold;
}

.back {
    position: absolute;
    left: 10px;
    top: 50%;
    transform: translateY(-50%)
}


/*选择菜系*/
.cuisineHead {
    background: #ffffff;
    width: 100%;
    height: 280px;
    color: #b0b0b0;
    margin-bottom: 8px;
    padding: 15px;
    box-sizing: border-box;
}

.cuisineChoice {
    width: 93%;
    display: flex;
    flex-wrap: wrap;
    /* justify-content: space-around; */
}

.cuisineChoiceItem{
    margin-right: 10px;
}

.cuisineBtn {
    border: 1px solid #b0b0b0;
    color: #b0b0b0;
    border-radius: 20px;
    line-height: 20px;
    padding:0 10px;
    margin-top: 10px;
    font-size: 14px;
}

.increase {
    width: 100%;
    height: 45px;
    background: #ffffff;
    line-height: 45px;
    position: relative;
}
.increaseIpt{
  padding: 0 18px;
}
.increaseBtn {
    width: 18%;
    height: 23px;
    border: 1px solid #6fba2c;
    color: #6fba2c;
    border-radius: 20px;
    margin-top: 10px;
    font-size: 14px;
    position: absolute;
    right: 15px;
}
.preservation{
  width: 60%;
  height: 35px;
  margin: 100px 20%;
  background: #6fba2c;
  color: #fff;
  border-radius: 30px;
  box-sizing: border-box;
}

.cuisine-head-bottom{
    margin-top: 10px;
    height: auto;
    padding: 10px;
}

/* 美化复选框 */
.chk_1:checked  + label{
    background: #6fba2c;
    color: #fff;
    border:1px solid #6fba2c;
}
