html,body{
    background: #ef7b54;
}
/* 头部 */
.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.head-center{
    margin: 0 auto;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}
/* 头部图片 */
.headImg{
    width: 100%;
    height: 150px;
    background: lightblue;
}
/* 邀请得积分 */
.integral{
    background: #fff;
    border-radius: 8px;
    margin-top: -25px;
    padding: 20px 0 5px 0;
}
.getIntegral{
margin-left: 10px;
font-weight: bold;
}
.integralText{
    font-size: 0.6em;
    color: #a3a3a3;
    margin:2px 0 20px 10px;
}
.integralBtn{
    width: 88%;
    height: 35px;
    background:#6eb92c;
    color: #fff;
    border-radius: 30px;
    margin:5px 0 20px 6%;
}
.recruitName{
    font-weight: bold;
    margin:0 0 15px 10px;
}
.recruit{
    width: 94%;
    height:85px ;
    background: #f09461;
    margin: 0 0 15px 3%;
    border-radius: 15px;
    display: flex;
    justify-content: space-between;
    color: #fff;
    text-align: center;
    line-height:30px ;
    padding: 15px;
    box-sizing: border-box;
}
.recruitText{
    font-size: 0.9em;
}
/* 分享以下商品邀请好友更有效 */
.title{
    color: #fff;
   line-height: 55px;
    text-align: center;
    letter-spacing:1px;
}
