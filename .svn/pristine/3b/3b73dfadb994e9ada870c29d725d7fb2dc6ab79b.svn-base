.bestSellers{
    padding: 10px 6px;
    display: flex;
    justify-content: space-between;
}
.bestSellers-item{
    height: 210px;
    width: 49%;
    font-size: 0.4em;
    background: #fff;
    position: relative;
}
.bestSellers-img{
    height:70%;
    border: 1px solid lightcoral;
    box-sizing: border-box;
  
}
.introduceFlex{
    height: 30%;
    display: flex;
    flex-direction:column;
    justify-content: space-between;
    padding: 4px;
    box-sizing: border-box;
}
.introduce{
    line-height: 13px;
}
.bestSellers-red{
    display: flex;
    justify-content: space-between;
}
.bestSellers-del{
    color: #a3a3a3;
    text-decoration:line-through;
    box-sizing: border-box;
    margin-left: -25px;
}
.salesVolume{
    color: #a3a3a3;
}
.bestSellers-text{
 font-size: 14px;
 color: #ff0000;
}
.bestSellers-line{
    margin-left: -25px;
}
