/* 头部 */
html,body,.wrap{
    height: 100%;
    background: #fff;
}
.wrap{
    font-size: 14px;
}
/* 头部图片 */
.headImg{
    padding: 20px 0 ;
    border-bottom: 1px solid #f9f9f9;
    box-sizing: border-box;
}
.my-head-imgbox{
    width: 54px;
    height: 54px;
}
.my-head-imgbox img{
    width: 100%;
}

.ui-row-flex-ver .ui-col {
    width: 100%;
    height: auto;
}
.head-h1{
    font-size: 1.2em;
}
.head-h1-tag{
    height: 16px;
    line-height: 16px;
    padding: 0 6px;
    font-size: 0.8em;
    color: #fff;
    background: #d5b178;
    border-radius:7px 7px 7px 0 ;
}
.head-tag-kitch{
    background: #6eb92c;
}
.head-tag{
    height: 16px;
    padding: 0 6px;
    line-height: 16px;
    border-radius: 8px;
    font-size: 0.9em;
    border:1px solid #000;
}
.my-verticle span{
    vertical-align: middle;
}
.head-tag-blown{
    background: #deb273;
    border:1px solid #deb273;
    color: #fff;
}
.head-right-item{
    text-align: right;
}
.badge-dot{
    position: absolute;
    right: 0;
    top: 3px;
    width: 5px;
    height: 5px;
    border-radius: 50%;
    background: #f00;
}
.bage-dot-out{
    position: relative;
}
.head-tag-point{
    padding: 1px 6px;
    border-radius: 9px;
}
.flex-spans span{
    display: inline;
    vertical-align: middle;
}

.my-head-imgbox{
    width: 54px;
    height: 54px;
}
.my-head-imgbox img{
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
}
/* 直推好友 */
.invite-friends{
    display: flex;
    width: 100%;
    height: 60px;
    line-height: 60px;
    text-align: center;
}
.invite-fri-item{
    width: 50%;
}
.invite-fri-item+.invite-fri-item{
    border-left: 1px solid #f9f9f9;
}
/* 搜索框 */
.search-box{
    width: 80%;
    padding: 4px 6px;
    /* height: 26px; */
    border-radius: 17px;
    margin: auto;
    background: #f4f4f4;
}
.search-input{
    width: calc(100% - 26px);
}

/* 直推好友2 */
.invite-friend-change{
    position: sticky;
    top:64px;
    height: auto;
    margin-top: 10px ;
    background: #fff;
    border-bottom: 1px solid #ddd;
    z-index:2
}
.invite-fri-bold{
    height: 32px;
    line-height: 32px;
    font-weight: bold;
}
.my-order-select{
    background: #fff;
    color: #6eb92c;
}
.my-order-select::after{
    display: block;
    content: "";
    width: 30%;
    height: 2px;
    margin: auto;
    background: #6eb92c;
}

/* 我的联系人列表 */
.my-contacts{
    display: flex;
    width: 100%;
    padding: 16px 10px;
    border-bottom: 1px solid #ddd;
}
.my-contacts-imgbox{
    width: 40px;
    height: 40px;
    margin-right: 10px;
}
.my-contacts-con{
    width: calc(100% - 50px);
}
.my-contacts-tag{
    border: none;
}
.swiper-nodatas{
    height: calc( 100vh - 300px);
    line-height:  calc( 100vh - 300px);
    text-align: center;
}