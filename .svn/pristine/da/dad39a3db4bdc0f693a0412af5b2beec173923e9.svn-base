.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.head-center{
    margin: 0 auto;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}
html,body{
    background: #f2f2f2;
}

/* 主料 */
.teachnext-items{
    margin-bottom: 20px;
}
.teachnext-items-title{
    display: flex;
   /*  justify-content: space-between; */
    padding: 10px;
    background: #fff;
}
.teachnext-title-p{
    text-indent: 6px;
    border-left: 2px solid #6eb92c;
}
.teachnext-items-item{
    display: flex;
    /* justify-content: space-between; */
    color: #999;
    padding: 15px 10px;
    width: 100%;
    box-sizing: border-box;
}
.teachnext-item-half{
    width: 45%;
}
.teachnext-half-input{
    width: 90%;
}
.input-active{
    border-bottom: 1px solid #6eb92c;
    transition:0.5s
}
.teachnext-items .teachnext-items-item:nth-of-type(2n-1) {
    background: #fff;
}
.teachnext-items .teachnext-items-item:nth-of-type(2n) {
    background: #fafafa;
}
.teachnext-items-text{
    padding: 5px;
    width: 100%;
    border:1px solid #ddd;
    box-sizing: border-box;
}

.teaching-cuisine-next{
    width: 70%;
    height: 30px;
    line-height: 30px;
    text-align: center;
    color: #fff;
    border-radius: 15px;
    margin: 30px auto;
    background: #6eb92c;
}