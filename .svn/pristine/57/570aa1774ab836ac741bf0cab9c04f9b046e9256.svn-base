
/* 轮播图 */
.swiper{
    width: 96vw;
    height: 48vw;
    margin:10px auto;
    border-radius: 10px;
}
.swiper-top{
    width: 100%;
    height: 100%;
}
.swiper-pagination-bullet{
    width: 12px;
    border-radius: 4px;
}
.swiper-pagination-bullet-active{
    background: #6eb92c;
}
.swiper-slide-imgbox{
    width: 100%;
    height: 100%;
    background: skyblue;
    border-radius: 10px;
}

.swiper-top-imgbox{
    width: 100%;
    height: 100%;
}
.swiper-top-imgbox img{
    width: 100%;
}
.my-bullet{
    opacity: 1;
    background: #fff;
}
.chef-main-recomend{
    padding: 10px 0;
    background-color: #f2f2f2;
}
/* 热点资讯、行业动态、最近活动 */
.chef-hotslist{
    background: #fff;
}
.chef-hotslist-head{
    position: sticky;
    top:62px;
    display: flex;
    background: #fff;
    border-bottom: 1px solid #ddd;
    padding: 10px 0;
    z-index: 2;
}
.hotslist-head-item{
    width: 33.3%;
    /* padding: 5px 0; */
    margin: 5px 0;
    font-size: 1.1em;
    text-align: center;
}
.hotslist-head-active{
    position: relative;
    color: #6eb92c;
}
.hotslist-head-active::after{
    position: absolute;
    display: block;
    content:"";
    width: 40%;
    left: 50%;
    bottom: -5px;
    transform: translateX(-50%);
    border:1px solid  #6eb92c;
}
.chef-hotslist-body{

}
.hotslist-body-item{
    padding: 10px ;
    font-size: 0.8em;
}
.hotslist-item-title{
    padding: 10px 0;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.hotslist-item-imgboxs{
    display: flex;
    align-items: center;
}
.hotslist-imgboxs-imgbox{
    width: 33%;
    height: 33vw;
    background: skyblue;
}
.hotslist-imgboxs-imgbox+.hotslist-imgboxs-imgbox{
    margin-left: 4px;
}
.hotslist-imgboxs-imgbox img{
    width: 100%;
}
.hotslist-item-footer{
    display: flex;
    justify-content:  flex-end ;
}
.hotslist-footer-item{
    margin-right: 16px;
}