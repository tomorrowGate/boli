.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.head-center{
    margin: 0 auto;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}

/* 厨师名片 */
.chef-main-head{
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding:10px;
    font-size: 14px;
    background: #fff;
    border-bottom: 1px solid #dfdfdf;
}
.chef-head-left{
    display: flex;
    align-items: center;
}
.chef-main-head .icon-qianbi{
    color: #6eb92c;
}
.chef-left-text{
    font-weight: bold;
    font-size: 1.2em;
    margin-left: 6px;
}
.chef-head-more{
    color: #a3a3a3;
}

.chef-detail-info{
    position: relative;
    background-size:100% 100%;
}
.chef-trends-head{
    display: flex;
    position: relative;
    align-items: center;
    padding: 15px;
}
.trends-head-imgbox{
    width: 50px;
    height: 50px;
    background: skyblue;
    border-radius: 50%;
    margin-right: 10px;
}
.trends-head-imgbox img{
    width: 100%;
}
.trends-center-name{
    font-weight: bold;
}
.trends-light{
    color: #999;
    font-size: 0.9em;
}
.trends-head-right{
    position: absolute;
    right:10px;
    top:50%;
    height: 16px;
    line-height: 16px;
    padding: 0px 8px;
    border:1px solid #6eb92c;
    border-radius: 9px;
    color: #6eb92c;
    transform: translateY(-50%);
}

.apprentice-main{
    padding-top: 20px;
    background: #f2f2f2;
}
.apprentice-textarea{
    width: 100%;
    padding: 20px 10px;
    background: #fff;
    box-sizing: border-box;
}
.apprentice-textarea textarea{
    width: 100%;
    height: 100%;
    padding: 5px;
    box-sizing: border-box;
}
.apprentice-submit{
    position: fixed;
    bottom: 40px;
    left: 50%;
    width: 70%;
    height: 40px;
    line-height: 40px;
    background: #6eb93c;
    color: #fff;
    border-radius: 20px;
    text-align: center;
    transform: translateX(-50%)
}