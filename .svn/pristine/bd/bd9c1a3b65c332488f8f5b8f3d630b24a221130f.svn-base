        api.toast({
                    msg: "您赞过了",
                    duration: 2000,
                    location: 'bottom'
                  });
                  return;
      }
		api.ajax({
          url : URL+'/index.php?app=boli_homepage&act=set_zan',
          method : 'post',
          cache : false,
          timeout : 30,
          dataType : 'json',
          returnAll : false,
          data : {
	          values:{
	          		article_id:article_id,
	          		userId:userId
	          	}
          }
        }, function(ret, err) {
        console.log(JSON.stringify(ret));
         	if (ret &&ret.done) {
        		  api.toast({
	                  msg: ret.retval,
	                  duration: 2000,
	                  location: 'bottom'
	                });
	              $("#zan"+article_id).html(parseInt($("#zan"+article_id).html())+1);
	              $("#zan_btn"+article_id).addClass("love_icon2").removeClass("love_icon");
	              $("#zan_btn"+article_id).removeAttr("onclick");
        	}else if(ret){
            api.toast({
                  msg: ret.msg,
                  duration: 2000,
                  location: 'bottom'
                });
          }else{
            api.toast({
                  msg: err.msg,
                  duration: 2000,
                  location: 'bottom'
                });
          }
        });
	}
	//下载分享
    function fnOpendown(aId) {
      event.stopPropagation();
      //复制文章文字
      var content = $("#article_" + aId).find(".article_title").text();
      var clipBoard = api.require('clipBoard');
      clipBoard.set({
        value : content
      }, function(ret, err) {
        if (err) {
          api.toast({
            msg : err.msg,
            duration : 2000,
            location : 'bottom'
          });
        }
      });
      //下载图片
      var pic_url = $("#article_" + aId).find(".article_content").find("img");
      $.each(pic_url, function(i, item) {
        var path = $(this).attr('src');
        var myurl = path;
        console.log(path);
        api.download({
          url : path,
          report : true,
          cache : true,
          allowResume : true,
        }, function(ret, err) {
          if (ret.state == 1) {
            //下载成功
            console.log("下载成功");
            console.log(ret.savePath);
            myurl = ret.savePath;
            api.saveMediaToAlbum({
              path : myurl
            }, function(ret, err) {
              if (ret && ret.status) {
                console.log('保存成功');

              } else {
                console.log('保存失败');

              }
            });
          } else {
            console.log("下载失败");
          }
        });

      })
      api.openFrame({
        name : 'download.share',
        url : './download.share.html',
        bounces : false,
        bgColor : 'rgba(0,0,0,0.5)',
        animation : {
