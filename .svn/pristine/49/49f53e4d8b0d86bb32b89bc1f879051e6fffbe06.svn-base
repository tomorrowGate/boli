<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport"
        content="maximum-scale=1.0,minimum-scale=1.0,user-scalable=0,width=device-width,initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>商品详情</title>
    <link rel="stylesheet" type="text/css" href="../font/iconfont.css" />
    <link rel="stylesheet" type="text/css" href="../css/api.css" />
    <link rel="stylesheet" type="text/css" href="../css/animate.css" />
    <link rel="stylesheet" type="text/css" href="../css/swiper.min.css" />
    <link rel="stylesheet" type="text/css" href="../css/malls/mall.description.css" />
</head>

<body>
    <div id="wrap">
        <!-- 头部导航 -->
        <div :class="['page-head',isTopShow?'':'hide-header']" ref="header">
            <transition 
            enter-active-class="animated fadeIn">
                <div class="page-head-normall" ref="page-head-normall" v-show="isTopShow">
                    <div class="back" @click="goBack" tapmode>
                        <i class="iconfont icon-back"></i>
                    </div>
                    <a href="#baby">宝贝</a>
                    <a href="#comment">评价</a>
                    <a href="#detail">详情</a>
                    <a href="#mustKnow">须知</a>
                    <i :class="['iconfont',isGoodsFav ?'icon-shoucang':'icon-wuxiaoxing-kong']" @click="addFacorate" tapmode></i>
                </div>
            </transition>
            <transition 
            enter-active-class="animated fadeIn">
                <div class="fix-head" ref="fix-head" v-show="!isTopShow">
                    <div class="fix-i-out">
                        <i class="iconfont icon-back" @click="goBack" tapmode></i>
                    </div>
                    <div class="fix-i-out">
                        <i 
                        @click="addFacorate"
                        tapmode
                        :class="['iconfont','detail-video-tag',isGoodsFav ?'icon-shoucang':'icon-wuxiaoxing-kong']"></i>
                    </div>
                </div>
            </transition>
        </div>
        <div class="main" id="main">
            <!-- 视频详情 -->
            <div class="detail-teach-videobox" id="baby">
                <div class="swiper-container goods-swiper-recommend">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide swiper-option" v-for="(v,i) in goodsInfo._images" :key="i" tapmode>
                            <div class="forum-item-imgbox">
                                <img :src="URL+v.image_url" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="navBtn">
                    <button class="videoBtn"><i></i>视频</button>
                    <button class="imgBtn">图片</button>
                </div>
            </div>
            <!-- 秒杀显示 -->
            <div class="kill-time" v-show="seckill==1">
                <div class="kill-time-text">限时秒杀</div>
                <div class="kill-time-timeout">
                    <div class="kill-timeout-text" v-if="countTime.endText.length>0">{{countTime.endText}}</div>
                    <div class="kill-timeout-text" v-else>距离秒杀结束剩  {{countTime.day}}天{{countTime.hour}}:{{countTime.minute}}:{{countTime.second}}</div>
                </div>
            </div>
            <!-- 商品价格 -->
            <div class="price">
                <div v-if="storeType==3">
                    <p class="priceDiscount">
                        <span class="priceNum">{{parseInt(goodsInfo.price)}}积分</span>
                    </p>
                </div>
                <div v-else="storeType==3">
                    <p class="priceDiscount" v-if="seckill==1">
                        <span class="priceNum">￥{{goodsInfo.sp_goods_price}}</span>
                        <span class="priceDel">￥{{goodsInfo.price}}</span>
                    </p>
                    <p class="priceDiscount" v-else>
                        <span class="priceNum"><span class="earn-text">￥</span>{{goodsInfo.price}}</span>
                        <span class="priceDel">￥{{goodsInfo.oprice}}</span>
                        <span v-if="isShowLittle">
                            <span class="earn-text">赚</span>
                            {{(goodsInfo.settlement_price*0.35).toFixed(2)}}
                        </span>
                    </p>
                </div>
                <div class="priceMarin" v-if="isShowLittle">
                    <span class="priceLogo">厨小店</span>
                    <span class="priceSmall" v-if="false">￥{{}}</span>
                </div>
                <p class="price-goodName">{{goodsInfo.goods_name}}</p>
            </div>
            <!-- 发货优惠 -->

            <div class="consignment">
                <span class="tag">发货</span>
                <i class="iconfont icon-didian"></i>
                <span class="add">{{goodsAddress}}</span>
                <!-- <span>快递：0.00</span> -->
                <span class="salesVolume">销量{{goodsInfo.orders}}</span>
            </div>
            <div class="discount" @click="showCoupon" v-if="storeType!=3" tapmode>
                <span class="tag">优惠</span>
                <span class="coupon">领优惠券</span>
                <i class="iconfont icon-htbArrowright icon-right"></i>
            </div>
            <!-- 保障 -->
            <div class="guarantee">
                <span class="tag">保障</span>
                <div class="guarantee-center">
                    <!-- <span class="guaranteeEstimate">17：00前付款，预计9月30日(后台送到)</span> -->
                    <span class="guaranteeText">送货上门 · 设备免费安装</span>
                </div>
                <i class="iconfont icon-htbArrowright icon-Location"></i>
            </div>
            <!-- 选择参数 -->
            <div class="consignment" @click="showGoodCards" tapmode>
                <span class="tag">选择</span>
                <span>选择</span>
                <span>分类</span>
                <i class="iconfont icon-htbArrowright icon-right"></i>
            </div>
            <div class="discount" v-if="false">
                <span class="tag">参数</span>
                <span>集成灶品牌</span>
                <span>型号</span>
                <i class="iconfont icon-htbArrowright icon-right"></i>
            </div>
            <!-- 宝贝评价 -->
            <div class="evaluate" id="comment" v-if="false">
                <div class="evaluateHead">
                    <span>宝贝评价</span>
                    <span>(889)</span>

                    <span class="whole">查看全部<i class="iconfont icon-htbArrowright icon-left"></i></span>
                </div>
                <div class="message">
                    <div class="flex">
                        <div class="circle">
                            <img src="" alt="">
                        </div>
                        <span class="circleName">涵(宝宝)</span>
                    </div>
                    <p class="circleText">已安装好,很给力,物流很快,服务态度也好。</p>
                </div>
                <div class="message">
                    <div class="flex">
                        <div class="circle">
                            <img src="" alt="">
                        </div>
                        <span class="circleName">涵(宝宝)</span>
                    </div>
                    <p class="circleText">已安装好,很给力,物流很快,服务态度也好。</p>
                </div>
            </div>
            <!-- 商品详情 -->
            <div class="commodityHead" id="detail">
                <p class="commoditySpacing">——————<span class="commodityTitle">商品详情</span>——————</p>
                <div class="rich-text" ref="rich-text" v-html="goodsInfo.description">
                </div>
            </div>
            <!-- 购买须知 -->
            <div id="mustKnow">
                <div class="mustknow-box">
                    <img src="../image/notice.jpg" alt="">
                </div>
            </div>
            
        <!-- 购物车弹框 -->
        <transition 
            enter-active-class="animated fadeIn" 
            leave-active-class="animated fadeOut" 
            :duration="500">
        <div class="dia-shopcard" v-show="isShowCar">
            <transition 
                enter-active-class="animated fadeIn" 
                leave-active-class="animated fadeOut" 
                :duration="200">
                <div class="dia-mask" @click="closeDia" tapmode v-show="isShowCar"  @touchmove.prevent></div>
            </transition>
            <transition 
                enter-active-class="animated fadeInUpBig" 
                leave-active-class="animated fadeOutDownBig" 
                :duration="500">
            <div class="dia-shopcard-real" v-show="isShowCar">
                <div class="dia-shopcard-top">
                    <div class="dia-shopcard-imgbox">
                        <img :src="goodsInfo.default_image" alt="">
                    </div>
                    <div class="dia-shopcard-topright">
                        <div class="shopcard-topright-sybol">￥<span class="shopcard-topright-money">{{goodShowPrice}}</span> </div>
                        <div class="shopcard-topright-stock">库存{{storkSelect+"件"}}</div>
                        <div class="shopcard-topright-address">配送至：德清县，选择 {{selectColor+specificationName}}</div>
                    </div>
                </div>
                <div class="dia-shopcard-content">
                    <div class="shopcard-content-block">
                        <div class="shopcard-content-head">配送区域</div>
                        <div class="shopcard-content-items">
                            <div class="shopcard-content-item">
                                <div>
                                    <i class="iconfont icon-didian"></i>
                                    <span class="sendAdd">{{goodsAddress}}</span>
                                </div>
                                <div class=""><i class="iconfont icon-htbArrowright"></i></div>
                                
                            </div>
                           <!--  <div class="shopcard-content-item">
                                <span class="">预约配送 30分钟内付款，预计9.20到</span>
                            </div> -->
                        </div>
                    </div>
                    <div class="shopcard-content-block" v-if="specArrLen">
                        <div class="shopcard-content-head">颜色分类</div>
                        <div class="shopcard-content-items">
                            <div class="shopcard-label-out">
                                <span 
                                    :class="['shopcard-content-itemlabel',selectColor==i?'shopcard-content-itemsel':'']" 
                                    v-for="(v,i) in specificationsArr" 
                                    @click="changeColors(i,1)"
                                    tapmode
                                    :key="i">
                                    {{i}}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="shopcard-content-block" v-if="specTextShow">
                        <div class="shopcard-content-head">型号</div>
                        <div class="shopcard-content-items">
                            <div class="shopcard-label-out" >
                                <span 
                                    :class="['shopcard-content-itemlabel',selectSpecifications==v.spec_id?'shopcard-content-itemsel':'']" 
                                    v-for="(v,i) in specificationsArr[selectColor]" 
                                    @click="changeColors(v.spec_id,2,v.stock,v.spec_2,v.price)"
                                    tapmode
                                    :key="i">
                                    {{v.spec_2}}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="shopcard-content-block">
                        <div class="shopcard-content-items shopcard-content-itemslast">
                            <div class="shopcard-content-item">
                                <span class="">购买数量</span>
                            </div>
                            <!-- 秒杀的 -->
                            <div class="shopcard-content-item shopcard-content-numchange" v-if="seckill">
                                <span class="shopcard-content-itemlabel shopcard-content-calc" @click="minusNumKill" tapmode>-</span>
                                <span class="shopcard-content-itemlabel shopcard-content-calc">{{buyKillNum}}</span>
                                <span class="shopcard-content-itemlabel shopcard-content-calc" @click="addNumKill" tapmode>+</span>
                            </div>
                            <!-- 正常的 -->
                            <div class="shopcard-content-item shopcard-content-numchange" v-else>
                                <span class="shopcard-content-itemlabel shopcard-content-calc" @click="minusNum" tapmode>-</span>
                                <span class="shopcard-content-itemlabel shopcard-content-calc">{{buyNum}}</span>
                                <span class="shopcard-content-itemlabel shopcard-content-calc" @click="addNum" tapmode>+</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dia-shopcard-bottom" v-show="seckill==1">
                    <div class="shopcard-bottom-kill" @click="buyRightNow" tapmode>立即购买</div>
                </div>
                <div class="dia-shopcard-bottom" v-show="seckill!=1">
                    <div class="shopcard-bottom-item shopcard-bottom-left" @click="addShopCard" tapmode>加入购物车</div>
                    <div class="shopcard-bottom-item shopcard-bottom-right" @click="buyRightNow" tapmode>立即购买</div>
                </div>
            </div>
            </transition>
        </div> 
    </transition>  


        <!-- 优惠券弹框 -->
        <transition 
            enter-active-class="animated fadeIn" 
            leave-active-class="animated fadeOut" 
            :duration="500">
        <div class="dia-shopcard" v-show="isShowCoupon">
            <transition 
                enter-active-class="animated fadeIn" 
                leave-active-class="animated fadeOut" 
                :duration="200">
                <div class="dia-mask" @click="cancleCoupon" v-show="isShowCoupon" tapmode @touchmove.prevent></div>
            </transition>
            <transition 
                enter-active-class="animated fadeInUpBig" 
                leave-active-class="animated fadeOutDownBig" 
                :duration="500">
            <div class="dia-shopcard-real dia-coupon-real" v-show="isShowCoupon">
                <div class="dia-shopcard-top dia-coupton-top" @touchmove.prevent>
                    <p class="coupton-title">优惠券</p>
                </div>
                <div class="dia-shopcard-content">
                    <div :class="['coupon-item',v.is_have==1?'gray-coup':'']" v-for="(v,i) in couponArr" :key="i" >
                        <div class="coupin-item-left">
                            <div class="coupon-item-money">￥<span class="money-real">{{v.coupon_value}}</span></div>
                            <div class="coupon-usetime">使用期限：{{v.start_time}} - {{v.end_time}}</div>
                            <div class="coupon-use-condition">{{v.coupon_name}}</div>
                        </div>
                        <div 
                        class="coupin-item-right" 
                        @click="receiveCoupon(v.coupon_id,v.is_have,i)" 
                        tapmode
                        v-show="!v.is_have">
                            <div class="coupon-item-receive">领 取</div>
                        </div>
                        <div 
                        class="coupin-item-right" 
                        @click="receiveCoupon(v.coupon_id,v.is_have,i)" 
                        tapmode
                        v-show="v.is_have">
                            <div class="coupon-item-receive">已领取</div>
                        </div>
                    </div>
                </div>
                <div class="dia-shopcard-bottom">
                    <div class="shopcard-bottom-kill coupon-bottom-canele" @click="cancleCoupon" tapmode>取消</div>
                </div>
            </div>
            </transition>
        </div> 
    </transition>  

    
        <!-- 分享弹框 -->
        <transition 
            enter-active-class="animated fadeIn" 
            leave-active-class="animated fadeOut" 
            :duration="500">
        <div class="dia-shopcard" v-show="isShowShare" @touchmove.prevent>
            <transition 
                enter-active-class="animated fadeIn" 
                leave-active-class="animated fadeOut" 
                :duration="200">
                <div class="dia-mask" v-show="isShowShare" @click="cancleShare" tapmode></div>
            </transition>
            <transition 
                enter-active-class="animated fadeInUpBig" 
                leave-active-class="animated fadeOutDownBig" 
                :duration="500">
            <div class="dia-shopcard-real dia-coupon-real dia-share-real" v-show="isShowShare">
                <div class="dia-shopcard-top dia-share-top" v-if="isShowLittle&&seckill!=1">
                    <p class="share-title">分享好友下单赚{{(goodsInfo.settlement_price*0.35).toFixed(2)}}</p>
                    <p class="share-explain">只要你的好友通过你的连接购买此商品，你就能赚到至少{{(goodsInfo.settlement_price*0.35).toFixed(2)}}元利润~</p>
                </div>
                <div class="dia-shopcard-top dia-share-top" v-else>
                    <p class="share-title">分享好友下单</p>
                    <p class="share-explain">新用户下载app更优惠哦</p>
                </div>
                <div class="dia-share-content">
                    <div class="share-item" @click="get_goods_info(goodId,'session')" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/wechat.png" alt="">
                        </div>
                        <div class="share-item-text">微信</div>
                    </div>
                    <div class="share-item" @click="get_goods_info(goodId,'timeline')" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/wpyq.png" alt="">
                        </div>
                        <div class="share-item-text">朋友圈</div>
                    </div>
                    <div class="share-item" @click="get_goods_info(goodId,'QFriend')" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/qq.png" alt="">
                        </div>
                        <div class="share-item-text">QQ</div>
                    </div>
                    <div class="share-item" @click="get_goods_info(goodId,'sinaWb')" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/weibo.png" alt="">
                        </div>
                        <div class="share-item-text">微博</div>
                    </div>
                    <div class="share-item" @click="copylink()" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/copylink.png" alt="">
                        </div>
                        <div class="share-item-text">复制链接</div>
                    </div>
              <!--       <div class="share-item" @click="openPictorial()" tapmode>
                        <div class="coupon-share-imgbox">
                            <img src="../image/erweima.png" alt="">
                        </div>
                        <div class="share-item-text">画报分享</div>
                    </div> -->
                </div>
                <div class="dia-shopcard-bottom">
                    <div class="shopcard-bottom-kill coupon-bottom-canele" @click="cancleShare" tapmode>取消</div>
                </div>
            </div>
            </transition>
        </div> 
    </transition>  

        <!-- 底部导航条 -->
        
        <nav class="footNav" v-if="storeType==3">
            <div class="dia-shopcard-bottom">
                <div class="shopcard-bottom-kill" @click="buyRightNow" tapmode>兑换</div>
            </div>
        </nav>
        <nav class="footNav" v-else="storeType==3">
            <div class="footNav-top footNav-bor" @click="goShopCart" tapmode>
                <i class="iconfont icon-gouwuche"></i>
                <p> 购物车</p>
            </div>
            <div class="footNav-top footNav-bor" @click="goCustom" tapmode>
                <i class="iconfont icon-kefu1"></i>
                <p> 客服</p>
            </div>
            <div class="footNav-item footNav-purchase" @click="showGoodCards" tapmode>自购</div>
            <div class="footNav-item footNav-share" @click="shareGoods" tapmode>分享</div>
        </nav>

    </div>
</div>
</body>
<script type="text/javascript" src="../script/api.js"></script>
<script type="text/javascript" src="../script/lib/jquery-3.3.1.min.js"></script>
<script type="text/javascript" src="../script/lib/swiper.min.js"></script>
<script type="text/javascript" src="../script/lib/vue.min.js"></script>
<script type="text/javascript">
    var userId = window.localStorage.getItem("userId");
    
    var wrap = new Vue({
        el: "#wrap",
        data: {
            URL: "",
            topBanner: {},
            imgDefalt: '../image/headimgDef.png',
            swiperTop: null,
            isTopShow: false,
            isGoodsFav:false,//是否收藏
            dialogBox:null,//分享模块
            isShowLittle:0,//是否显示厨小店，1：显示
            goodId: 0,
            seckill:0,//是否为秒杀商品
            storeType:2,//默认的商店类型为2，积分商城为3
            upper:1,
            sale:1,
            killEndTime:0,
            countTime: {
                day:0,
                hour: 0,
                minute: 0,
                second: 0,
                endText: ""
            },
            goodsInfo: [],
            couponArr:[],
            storeId:0,
            goodShowPrice:0,
            goodsAddress:"",
            isShowCar:false,
            isShowCoupon:false,
            isShowShare:false,
            storkSelect:0,//库存
            specificationsArr:[],//规格数组
            specArrLen:0,//规格数组的长度
            selectColor:'',//被选中的颜色
            specificationName:"",//被选中的规格的名称
            selectSpecifications:'',//被选中的规格id
            buyNum:1,
            buyKillNum:10,
            //goodsInfo._specs[0].stork
        },
        computed: {
            specTextShow:function(){
                console.log("是否有规格"+this.specArrLen)
                if(this.specArrLen&&this.specificationsArr[this.selectColor]&&this.specificationsArr[this.selectColor].length){
                    console.log(this.specificationsArr[this.selectColor].length)
                    return this.specificationsArr[this.selectColor].length
                }
                return this.specArrLen&&this.specificationsArr[this.selectColor]&&this.specificationsArr[this.selectColor].length
            },
        },
        methods: {
            goBack: function goBack() {
                api.closeWin()
            },
            isLogin:function isLogin(){
                console.log(window.localStorage.getItem("userId"))
                if(!userId){
                    var timer = setTimeout(function(){
                        api.openWin({
                            name : 'login',
                            url : './login.html',
                            allowEdit:true,
                            slidBackEnabled:false
                        });
                        api.toast({
                            msg: '请先登录!',
                            duration: 2000,
                            location: 'middle'
                        });
                        clearTimeout(timer)
                    },1000)
                }
                
            },
            checkLogin: function checkLogin() {
                if (window.localStorage.getItem("ugrade")) {
                    var ugrade = window.localStorage.getItem("ugrade"); //用户等级
                } else {
                    var ugrade = 0; //未登录
                }
            },
            getScroll: function getScroll() {
                var top = this.$refs['header'].getBoundingClientRect().bottom
                var scrollTop = document.documentElement.scrollTop || document.body.scrollTop//必须加上|| document.body.scrollTop
                if (scrollTop >= top) {
                    this.isTopShow = true
                } else {
                    this.isTopShow = false
                }
            },
            showCoupon:function showCoupon(e){
                this.isShowCoupon = true
            },
            cancleCoupon:function cancleCoupon(e){
                this.isShowCoupon = false
            },
            cancleShare:function(){
                this.isShowShare = false
            },
            //判断是否为厨小店
            isLittleKitchen :function(){
                var that = this
                api.ajax({
                    url: that.URL + 'index.php?app=appvstore',
                    method: 'post',
                    cache: false,
                    timeout: 30,
                    dataType: 'json',
                    returnAll: false,
                    data: {
                        values: {
                            user_id: userId
                        }
                    }
                }, function (ret, err) {
                    //console.log(JSON.stringify(ret.retval));
                    if (ret && ret.done) {
                       that.isShowLittle = ret.retval
                       console.log()
                    } else if (ret) {
                        api.toast({
                            msg: ret.msg,
                            duration: 2000,
                            location: 'middle'
                        });
                    } else {
                        console.log(err.msg)
                        /* api.toast({
                            msg: err.msg,
                            duration: 2000,
                            location: 'middle'
                        }); */
                    }
                });
            },
            //初始化图片视频轮播图
            initSwiperPic: function () {
                new Swiper('.goods-swiper-recommend', {
                    slidesPerView: 'auto',
                    observer: true,
                    observeParents: true,
                    on: {
                        click: function () {
                            const realIndex = this.realIndex;
                            console.log(this.realIndex)
                        }
                    },
                    preventLinksPropagation: false   // 阻止点击事件冒泡
                });
            },
