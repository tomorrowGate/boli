.page-head{
    display: flex;
    height: 44px;
    line-height: 44px;
}
.back{
    position: absolute;
    left: 10px;
    top:50%;
    transform: translateY(-50%)
}

/* 厨师名片 */
.chef-detail-info{
    position: relative;
    padding: 30px 0 10px 0;
    background-image:url("../../image/chefdetail.png");
    background-size:100% 100%;
}
.chef-trends-head{
    display: flex;
    position: relative;
    align-items: center;
    padding: 0 15px;
}
.trends-head-imgbox{
    width: 70px;
    height: 70px;
    background: skyblue;
    border-radius: 50%;
    margin-right: 10px;
}
.trends-head-imgbox img{
    width: 100%;
}
.trends-center-name{
    font-weight: bold;
}
.trends-light{
    color: #999;
    font-size: 0.9em;
}
.trends-head-right{
    position: absolute;
    right:10px;
    top:50%;
    height: 16px;
    line-height: 16px;
    padding: 0px 8px;
    border:1px solid #6eb92c;
    border-radius: 9px;
    color: #6eb92c;
    transform: translateY(-50%);
}
.trends-head-foot{
    display: flex;
    width: 80%;
    padding: 10px 0;
    margin: auto;
}
.head-footer-item{
    width: 50%;
    text-align: center;
}
.head-footer-item+.head-footer-item{
    border-left: 1px solid #999;
}


.chef-hotslist-head{
    display: flex;
    background: #fff;
    margin-top: 20px;
    font-size: 0.9em;
}
.hotslist-head-item{
    width: 33.3%;
    /* padding: 5px 0; */
    margin: 10px 0;
    font-size: 1.1em;
    text-align: center;
}
.hotslist-head-active{
    position: relative;
    color: #6eb92c;
}
.hotslist-head-active::after{
    position: absolute;
    display: block;
    content:"";
    width: 40%;
    left: 50%;
    bottom: -10px;
    transform: translateX(-50%);
    border:1px solid  #6eb92c;
}

/* 名师信息 */
.trends-body{
    margin-bottom: 20px
}
.chef-detail-main{
    padding: 0 30px;
    font-size: 0.9em;
}
.chef-detail-list{
    padding: 5px 0;
}
.chef-list-item{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
    padding: 5px;
}
.list-item-key{
    margin-right: 20px;
}
.list-item-value{
    width: 80%;
}
.cuisine{
    margin-bottom: 20px;
}
.experience-detail+.experience-detail{
    margin-top: 10px
}

/* 教学 */
.detail-teach-videos{
   padding: 10px;
}
.detail-teach-videobox{
    background: skyblue;
    margin-bottom: 10px;
}
.detail-video-bottom{

}
.detail-video-name{
    font-weight: bold;
}
.video-video-detail{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.video-video-left{
    display: flex;
    align-items: center;
    font-size: 0.8em;
    color: #999;
}
.video-left-text{
    margin: 10px;
}
.video-video-right{
    display: flex;
    align-items: center;
    font-size: 0.9em;
}
.video-footer-item{
    margin-left: 10px;
}
/* footer */
.chef-detail-suspension{
    position: fixed;
    bottom: 54px;
    right: 10px;
    width: 40px;
    height: 40px;
    padding: 5px;
    border-radius: 50%;
    font-size: 0.9em;
    background: rgba(0,0,0,1);
    color: #fff;
    text-align: center;
    z-index: 3;
}
.chef-detail-asteacher{
    position: fixed;
    bottom:0;
    width: 100%;
    padding: 15px;
    text-align: center;
    background: #fff;
}
